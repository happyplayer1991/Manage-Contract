<div class="logo">
  <h1>Recruiter Dashboard</h1>
</div>

<% if user_signed_in? %>
  <ul class="nav nav-tabs mr-auto custom-nav">
    <li class="nav-item">
  		<%= link_to 'Dashboard', jobs_path, class: "nav-link #{active? jobs_path}" %>
		</li>

		<li class="nav-item">
  		<%= link_to 'New Job', new_job_path, id: 'new_job_from_nav', class: "nav-link #{active? new_job_path}" %>
		</li>

    <li class="nav-item">
      <%= link_to "Your Profile", user_path(current_user.id), class: "nav-link #{active? user_path(current_user.id)}" %>
    </li>

    <% if current_user.companies.count == 0 %>
      <li class="nav-item">
        <%= link_to 'Setup your Company', new_company_path, class: "nav-link #{active? new_company_path}" %>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to 'View your Company', company_path(current_user.companies.ids), class: "nav-link #{active? company_path(current_user.companies)}" %>
      </li>
    <% end %>

    <li class="nav-item">
      <%= link_to 'Setup Profile', edit_user_registration_path, class: "nav-link #{active? edit_user_registration_path}" %>
    </li>

    <li class="nav-item ml-auto">
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "nav-link #{active? destroy_user_session_path}" %>
    </li>
  </ul>
<% end %>
